<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".data.studentHome">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/student_registered_events_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registered Events"
        android:textAlignment="center"
        android:layout_weight="0.1"/>

    <LinearLayout
        android:id="@+id/student_events_sections_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.1">

        <Button
            android:id="@+id/student_past_events_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Past"
            android:layout_margin="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/student_ongoing_events_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ongoing"
            android:layout_margin="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/student_upcoming_events_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="upcoming"
            android:layout_margin="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/student_events_list_fragment_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"/>




</LinearLayout>