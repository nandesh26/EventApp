<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Student_home_parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".data.studentHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/student_registered_events_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="#EEEEEE"
            android:text="Registered Events"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/student_events_sections_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="#EEEEEE"
        android:orientation="horizontal">

        <Button
            android:id="@+id/student_past_events_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Past" />

        <Button
            android:id="@+id/student_ongoing_events_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Ongoing" />

        <Button
            android:id="@+id/student_upcoming_events_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="upcoming" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/student_events_list_fragment_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/calenderViewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:src="@drawable/ic_calendar_image"
        android:backgroundTint="@color/purple_200"/>

</LinearLayout>