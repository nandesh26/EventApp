<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/organiser_event_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="13dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/organiser_event_id"
                android:layout_width="wrap_content"
                android:text="1. "
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />/>

            <TextView
                android:id="@+id/organiser_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/organiser_event_start_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="11-11-2011 11:11"
                android:layout_weight="7"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=" to "
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/organiser_event_end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="11-11-2011 23:11"
                android:layout_weight="7"/>

        </LinearLayout>

        <TextView
            android:id="@+id/organiser_event_description"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:maxLines="5"
            android:scrollHorizontally="false"
            android:text="Description"
            android:textColor="@color/black" />

    </LinearLayout>


</LinearLayout>